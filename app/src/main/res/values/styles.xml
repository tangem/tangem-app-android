<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <!-- Toolbar -->
    <style name="DarkToolbarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- EditText -->
    <style name="StyledEditText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="colorControlNormal">#e34b1c</item>
    </style>

    <style name="TapButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">3dp</item>
        <item name="android:fontFamily">@font/saira_semi_condensed_regular</item>
    </style>

    <style name="TapButtonWithIcon"  parent="TapButton">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingEnd">18dp</item>
    </style>

    <style name="TapBlackButton"  parent="TapButtonWithIcon">
        <item name="android:backgroundTint">@color/darkGray6</item>
    </style>


</resources>